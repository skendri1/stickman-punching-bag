<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/highScoresMainLayout"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/highScores"
        android:layout_width="fill_parent"
        android:layout_height="35dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingBottom="10dp" >

        <Button
            android:id="@+id/mainMenuButton"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:background="@drawable/stickman_punchingbag_button_dark"
            android:gravity="right|center"
            android:onClick="onMainMenuButtonClick"
            android:text="@string/main_menu_button" />

        <TextView
            android:id="@+id/highScoresTitleTextView"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingRight="10sp"
            android:text="@string/high_scores_button" >
        </TextView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/highScoresColumnNames"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="10dp" >

        <TextView
            android:id="@+id/nameColTextView"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingRight="10sp"
            android:text="@string/high_scores_name_column" >
        </TextView>

        <TextView
            android:id="@+id/numberOfPunchesColTextView"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingRight="10sp"
            android:text="@string/high_scores_punches_column" >
        </TextView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/highScoresListItem"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/playerNameTextView"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingRight="10sp" >
        </TextView>

        <TextView
            android:id="@+id/numberOfPunchesTextView"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingRight="10sp" >
        </TextView>
    </LinearLayout>

</LinearLayout>